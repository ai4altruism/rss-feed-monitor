# .env file for RSS Feed Monitor

# OpenAI API settings
#RSS Feed Monitor API key
OPENAI_API_KEY=sk-proj-

FILTER_MODEL=gpt-5-mini
GROUP_MODEL=gpt-5-mini
SUMMARIZE_MODEL=gpt-5-mini

# Filter prompt for LLM (plain language)
#FILTER_PROMPT="Only include stories related to Ukraine."
FILTER_PROMPT="Only include stories about SIGNIFICANT natural disasters affecting large populations or widespread areas: major 
  earthquakes (6.0+ magnitude), tsunamis, hurricanes/typhoons/cyclones, severe flooding, major wildfires, volcanic eruptions, and 
  severe weather events causing widespread damage. EXCLUDE: transportation accidents, building collapses, small-scale incidents, 
  crime, politics, routine weather, and minor local events. REQUIRE: clear location information including city/state for US locations
   or country for international locations."

# RSS feed URLs (comma-separated)
RSS_FEEDS=

# Processing interval (in minutes)
PROCESS_INTERVAL=90

# Slack Integration
## Aid Arena 
SLACK_WEBHOOK_URL=

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=True
EMAIL_RECIPIENTS=

# Web Dashboard Settings
WEB_DASHBOARD_PORT=5001

# Article history settings
HISTORY_RETENTION_DAYS=14
